<form action="/restaurants/{{restaurant._id}}?_method=PUT" class="creat-form w-50 mx-auto" method="post">
  <label for="name" class="mt-3">餐廳名稱：</label>
  <input class="form-control" type="text" placeholder="name" name="name" id="name" value="{{restaurant.name}}">
  <label for="name_en" class="mt-3">餐廳名稱-英文：</label>
  <input class="form-control" type="text" placeholder="name_en" name="name_en" id="name_en" value="{{restaurant.name_en}}">
  <label for="category" class="mt-3">類別：</label>
  <input class="form-control" type="text" placeholder="category" name="category" id="category" value="{{restaurant.category}}">
  <label for="image" class="mt-3">照片URL：</label>
  <input class="form-control" type="text" placeholder="image" name="image" id="image" value="{{restaurant.image}}">
  <label for="location" class="mt-3">地址：</label>
  <input class="form-control" type="text" placeholder="location" name="location" id="location" value="{{restaurant.location}}">
  <label for="phone" class="mt-3">電話：</label>
  <input class="form-control" type="text" placeholder="phone" name="phone" id="phone" value="{{restaurant.phone}}">
  <label for="google_map" class="mt-3">Google 地圖：</label>
  <input class="form-control" type="text" placeholder="google_map" name="google_map" id="google_map" value="{{restaurant.google_map}}">
  <label for="rating" class="mt-3">評分：</label>
  <input class="form-control" type="number" name="rating" min="0" max="5" step="0.1" value="{{restaurant.rating}}">
  <label for="description" class="mt-3">餐廳敘述：</label>
  <textarea name="description" id="description" cols="30" rows="10">{{restaurant.description}}</textarea>
  <button class="btn btn-info btn-lg mt-3" type="submit">Create</button>
</form>